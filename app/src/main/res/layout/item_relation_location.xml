<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/item_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvItemLocation"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="3dp"
            android:adjustViewBounds="true"
            android:paddingRight="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textColor="@color/name_attractions"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_location"
                        android:scaleType="fitXY"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/tvAddressLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginRight="10dp"
                        android:text="39 Trần Cao Vân, Hội An"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ic_like" />

                    <TextView
                        android:id="@+id/tvLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="8dp"
                        android:textSize="12sp"
                        android:text="180"
                        android:textColor="@color/description" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ic_unlike" />

                    <TextView
                        android:id="@+id/tvUnLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:text="180"
                        android:textColor="@color/description" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDescriptionLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="3" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>


</RelativeLayout>

